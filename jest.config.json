{
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/(*.)+(test).+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleDirectories": ["node_modules", "src"],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testEnvironment": "jest-environment-node"
  }